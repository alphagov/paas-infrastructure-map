# Use editorconfig to stop whitespace wars
# http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_size = 2
indent_style = tab
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.{ts,js,tsx,jsx,json}]
indent_size = 2
indent_style = tab
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
continuation_indent_size = 4

[*.{scss,css}]
indent_size = 2
indent_style = space
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.html]
indent_size = 2
indent_style = space
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.sh]
indent_size = 4
indent_style = tab
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_size = 4
indent_style = tab
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

